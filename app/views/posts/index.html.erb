<style>
  #new_post{
    border: 1px solid;
    padding: 6px;
  }

</style>


<div id="new_post">
  <%= render partial: "posts/form", locals: {post: Post.new} %>
</div>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%#= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

